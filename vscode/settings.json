{
    "files.autoSave": "afterDelay",
    "editor.fontFamily": "DejaVuSansMNF",
    "terminal.integrated.fontFamily": "RobotoMonoNF-Rg",
    "workbench.colorTheme": "Visual Studio Dark",
    "workbench.editorAssociations": {
        "*.ipynb": "jupyter.notebook.ipynb"
    },
    "workbench.editor.tabSizing": "shrink",
    "workbench.editor.enablePreviewFromQuickOpen": false,
    "workbench.editor.enablePreview": false,
    "workbench.editor.highlightModifiedTabs": true,
    "workbench.editor.closeOnFileDelete": true,
    "workbench.fontAliasing": "antialiased",
    "workbench.iconTheme": "vs-nomo-dark",
    "workbench.colorCustomizations": {
        
        // side panel
        "sideBar.background": "#3b3d39",
        "sideBar.foreground": "#d4d4d4",
        "sideBarTitle.foreground": "#BBBBBB",
        "sideBarSectionHeader.border": "#567d36",
        "sideBarSectionHeader.background": "#3b3d39",
        "sideBarSectionHeader.foreground": "#d4d4d4",
        "activityBar.background": "#567d36",
        "activityBar.foreground": "#000000",
        "activityBar.inactiveForeground": "#414141",
        "activityBar.activeFocusBorder": "#ffa112",
        "activityBar.activeBackground": "#567d36",
        "activityBar.activeBorder": "#ffa112",
        "activityBar.dropBorder": "#414141",
        
        // top panel
        "focusBorder": "#567d36",
        "commandCenter.foreground": "#567d36",
        
        // editor
        "tab.activeBorder": "#567d36",
        "tab.activeBackground": "#2c2c2c",
        "tab.hoverBackground": "#567d36",
        "tab.hoverForeground": "#d4d4d4",
        "tab.activeForeground": "#ffffff",
        "tab.lastPinnedBorder": "#ccc3",
        "tab.inactiveBackground": "#262626",
        "tab.inactiveForeground": "#ffffff",

        "breadcrumb.background": "#262626",
        "breadcrumb.foreground": "#bab7b7",
        "breadcrumb.focusForeground": "#ffffff",
        
        "minimap.selectionHighlight": "#ffa112",
        "editor.background": "#262626",
        "editor.foreground": "#D4D4D4",
        "editor.inactiveSelectionBackground": "#3A3D41",
        "editor.selectionHighlightBackground": "#ADD6FF26",
        "editorIndentGuide.activeBackground": "#707070",
        "editorIndentGuide.background": "#404040",

        "activityBarBadge.background": "#1c7a82",
        "activityBarBadge.foreground": "#ffffff",

        "badge.background": "#535353",
        "badge.foreground": "#ffffff",

        "widget.border": "#313030",

        // text
        "input.border": "#567d36",
        "input.background": "#3b3d39",
        "input.foreground": "#d4d4d4",
        "input.placeholderForeground": "#A6A6A6",
        "button.background": "#567d36",
        "checkbox.background": "#567d36",
        "checkbox.border": "#6B6B6B",
        "list.activeSelectionIconForeground": "#FFF",
        "list.dropBackground": "#383B3D",
        "list.activeSelectionBackground": "#567d36",
        "list.focusBackground": "#567d36",
        "list.hoverBackground": "#567d36",
        "list.inactiveSelectionBackground": "#434343",

        // bottom panel
        "statusBar.background": "#292929",
        "statusBar.foreground": "#d4d4d4",
        "statusBarItem.remoteForeground": "#FFF",
        "statusBarItem.remoteBackground": "#1c7a82",

        "terminal.background": "#2c2c2c",
        "terminal.inactiveSelectionBackground": "#3A3D41",

        "terminal.ansiBlack": "#2c2c2c",
        "terminal.ansiBrightBlack": "#535353",
        "terminal.ansiRed": "#ff0000",
        "terminal.ansiBrightRed": "#dc3936",
        "terminal.ansiGreen": "#567d36",
        "terminal.ansiBrightGreen": "#81b622",
        "terminal.ansiYellow": "#ffa112",
        "terminal.ansiBrightYellow": "#feb601",
        "terminal.ansiBlue": "#0883dd",
        "terminal.ansiBrightBlue": "#2486d4",
        "terminal.ansiMagenta": "#af27c6",
        "terminal.ansiBrightMagenta": "#ab4abc",
        "terminal.ansiCyan": "#1c7a82",
        "terminal.ansiBrightCyan": "#26c6da",
        "terminal.ansiWhite": "#bab7b7",
        "terminal.ansiBrightWhite": "#ffffff",

        // other
        "menu.background": "#252526",
        "menu.border": "#454545",
        "menu.foreground": "#CCCCCC",
        "menu.separatorBackground": "#454545",
        "ports.iconRunningProcessForeground": "#09ff00"
    },

    "go.lintTool": "golangci-lint",
    "go.lintFlags": [
        "--fast"
    ],
    "go.vetOnSave": "workspace",
    "go.testOnSave": false,
    "go.useLanguageServer": true,
    "go.testFlags": [
        "-v"
    ],
    "go.formatTool": "goimports",
    "go.toolsManagement.autoUpdate": true,
    "go.enableCodeLens": {},
    "go.disableConcurrentTests": true,
    "gopls": {
        "ui.diagnostics.staticcheck": true,
        "ui.diagnostic.analyses":{
            "nilness": true,
            "shadow": true,
            "unusedparams": true,
            "unusedvariable": true,
            "useany": true
        }
    },
    "go.coverOnSingleTest": true,
    "go.coverOnSingleTestFile": true,
    "go.coverOnTestPackage": true,
    "go.coverageDecorator": {
        "type": "highlight",
        "coveredHighlightColor": "#09ff001c",
        "uncoveredHighlightColor": "rgba(128,64,64,0.25)",
        "coveredBorderColor": "#09ff001c",
        "uncoveredBorderColor": "rgba(128,64,64,0.25)",
    },
    "go.coverageOptions": "showBothCoveredAndUncoveredCode",
    "go.delveConfig":{
        "showGlobalVariables": true
    },
    "go.diagnostic.vulncheck":"Imports",
    "go.lintOnSave": "workspace",

    "todo-tree.highlights.backgroundColourScheme": [
        "#ffa112",
        "#567d36"
    ],
    "todo-tree.highlights.foregroundColourScheme": [
        "#252526"
    ],
    "todo-tree.highlights.useColourScheme": true,
    "todo-tree.tree.flat": true,
    "todo-tree.tree.groupedByTag": true,

    "diffEditor.ignoreTrimWhitespace": false,
    "diffEditor.codeLens": true,
    "python.languageServer": "Default",
    "explorer.confirmDelete": false,
    "files.exclude": {
        "**/.classpath": true,
        "**/.project": true,
        "**/.settings": true,
        "**/.factorypath": true
    },
    "editor.suggestSelection": "first",
    "explorer.confirmDragAndDrop": false,
    "workbench.statusBar.visible": true,
    "redhat.telemetry.enabled": true,
    "[python]": {
        "editor.formatOnType": true
    },
    "window.zoomLevel": 2
}
